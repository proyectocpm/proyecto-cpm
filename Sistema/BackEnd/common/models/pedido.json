{
  "name": "pedido",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "fechaPedido": {
      "type": "date"
    },
    "numeropedido": {
      "type": "number",
      "required": true
    },
    "estado": {
      "type": "string",
      "default": "Pendiente",
      "required": true
    },
    "cantidad": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "detallefactura": {
      "type": "hasMany",
      "model": "detallefactura",
      "foreignKey": "idpedido"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    { 
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "actualizaEstado",
      "accessType": "EXECUTE"
    }
  ],
  "methods": {} 
}
